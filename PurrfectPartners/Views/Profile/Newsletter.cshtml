@{
    ViewData["Title"] = "Newsletter";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var statusMessage = TempData["StatusMessage"];
}
<h1>Subscription Status: <span class="text-success">@ViewBag.NewsletterStatus</span> </h1>
@*<div class="mt-2 mb-4">
    <a asp-page="/Areas/Identity/Pages/Account/Manage/Index.cshtml">Back to Profile</a>
</div>*@
<hr />
<partial name="~/Views/Profile/_StatusMessage.cshtml" model="statusMessage" />
<p class="mb-2">The Purrfect Partner's Newsletter allows you to stay fully up-to-date with our latest and great of offers. We'll update you of any changes
    to our existing services or upon the availability of new ones. 🐶
</p>
@if (ViewBag.NewsletterStatus == "Inactive")
{
    <a asp-action="Subscribe" asp-controller="SNS" class="btn btn-primary btn-success">Subscribe</a>
} else if (ViewBag.NewsletterStatus == "Active")
{
    <a asp-action="Unsubscribe" asp-controller="SNS" class="btn btn-primary btn-danger">Unsubscribe</a>
}
