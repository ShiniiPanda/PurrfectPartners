@model IEnumerable<PurrfectPartners.Areas.Identity.Data.User>

@{
    ViewData["Title"] = "ManageCustomers";
    Layout = "~/Views/Staff/_Layout.cshtml";
}

<h1>Manage Customer Accounts</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                Phone
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
        </tr>
}
    </tbody>
</table>
@if (Model.Count() == 0)
{
    <h4 class="text-danger">There are no customer accounts!</h4>
}
